<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A000000" />
            <corners android:radius="@dimen/radius_border_constraint_man" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#7C3AED"
                android:startColor="#5651E9" />
            <stroke
                android:width="1dp"
                android:color="@color/stroke_border_constraint_man_clicked" />
            <corners android:radius="@dimen/radius_border_constraint_man" />
        </shape>
    </item>

</layer-list>