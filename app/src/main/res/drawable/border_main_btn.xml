<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- 어두운 그림자 -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 메인 버튼 색상 -->
            <corners android:radius="16dp" />
            <stroke
                android:color="@color/stroke_main_btn"
                android:width="1.5dp" />
        </shape>
    </item>

</layer-list>
