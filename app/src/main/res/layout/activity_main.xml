            <TextView
                android:id="@+id/tvHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심박수: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvStepCount"
