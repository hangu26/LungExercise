<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>

       <variable
           name="fragment"
           type="kr.daejeonuinversity.lungexercise.view.infoinput.fragment.ScreeningFragment" />

       <variable
           name="viewmodel"
           type="kr.daejeonuinversity.lungexercise.viewmodel.ScreeningViewModel" />

   </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_badge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon_badge"
                android:layout_width="@dimen/size_icon_badge"
                android:layout_height="@dimen/size_icon_badge"
                android:layout_marginStart="@dimen/margin_start_frag_tx_birth"
                android:src="@drawable/ic_badge"
                app:layout_constraintBottom_toBottomOf="@+id/tx_input_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tx_input_weight" />

            <TextView
                android:id="@+id/tx_input_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tx_input_weight_to_icon"
                android:layout_marginTop="@dimen/margin_top_frag_tx_birth"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/tx_input_screening_number"
                android:textColor="@color/black"
                android:textSize="@dimen/size_tx_input_birth"
                app:layout_constraintStart_toEndOf="@+id/icon_badge"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_input_weight_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_tx_input_weight_detail"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/tx_input_screening_number_detail"
                android:textColor="@color/color_tx_input_weight_detail"
                android:textSize="@dimen/size_tx_input_weight_detail"
                app:layout_constraintStart_toStartOf="@+id/icon_badge"
                app:layout_constraintTop_toBottomOf="@+id/icon_badge" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_frag_edt_weight"
                android:layout_marginTop="@dimen/margin_top_edt_weight"
                android:layout_marginEnd="@dimen/margin_end_edt_weight"
                android:background="@drawable/border_edt_weight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tx_input_weight_detail">

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_edt_weight"
                    android:background="@null"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="start|center_vertical"
                    android:inputType="number"
                    android:paddingStart="@dimen/padding_start_edt_weight"
                    android:text="@={viewmodel.txEdtScreening}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_edt_weight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>