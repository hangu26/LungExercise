<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_bluetooth_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_linear_result_time"
        android:visibility="visible"
        android:background="@drawable/border_linear_bluetooth_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_icon_bluetooth"
            android:layout_width="@dimen/size_constraint_icon_bluetooth"
            android:layout_height="@dimen/size_constraint_icon_bluetooth"
            android:layout_marginStart="@dimen/margin_constraint_icon_bluetooth"
            android:layout_marginTop="@dimen/margin_constraint_icon_bluetooth"
            android:layout_marginBottom="@dimen/margin_constraint_icon_bluetooth"
            android:background="@drawable/border_constraint_bluetooth_white_quadrangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_bluetooth"
                android:layout_width="@dimen/size_icon_breath_in_lung_exercise"
                android:layout_height="@dimen/size_icon_breath_in_lung_exercise"
                android:src="@drawable/icon_bluetooth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tx_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_tx_device_name"
            android:layout_marginEnd="@dimen/margin_start_tx_device_name"
            android:fontFamily="@font/pretendard_semibold"
            android:text="@string/tx_device_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_tx_device_name"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_icon_bluetooth"
            app:layout_constraintEnd_toStartOf="@+id/constraint_connect_device"
            app:layout_constraintStart_toEndOf="@+id/constraint_icon_bluetooth"
            app:layout_constraintTop_toTopOf="@+id/constraint_icon_bluetooth" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_connect_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_constraint_connect_device"
            android:background="@drawable/border_constraint_bluetooth_white_quadrangle"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tx_connect_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_side_tx_connect_device"
                android:layout_marginTop="@dimen/margin_vertical_tx_connect_device"
                android:layout_marginEnd="@dimen/margin_side_tx_connect_device"
                android:layout_marginBottom="@dimen/margin_vertical_tx_connect_device"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/tx_connect"
                android:textColor="@color/white"
                android:textSize="@dimen/size_tx_connect_device"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>