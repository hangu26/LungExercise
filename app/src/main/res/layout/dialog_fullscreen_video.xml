<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar_normal_video"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_progressbar_normal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/margin_top_progressbar_in_practice"
        android:layout_marginBottom="25dp"
        android:alpha="0.5"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_splash"
        app:layout_constraintBottom_toTopOf="@+id/progress_bar_user_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.43" />

    <ProgressBar
        android:id="@+id/progress_bar_user_video"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_progressbar_normal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/margin_top_progressbar_in_practice"
        android:layout_marginBottom="50dp"
        android:alpha="0.5"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.43" />

</androidx.constraintlayout.widget.ConstraintLayout>
