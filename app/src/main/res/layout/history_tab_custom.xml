<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_tab_layout_item"
    android:layout_height="@dimen/height_tab_layout_item"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="12dp"
    android:background="@drawable/border_tab_item">

    <ImageView
        android:id="@+id/tabIcon"
        android:layout_width="@dimen/size_icon_tab_item"
        android:layout_height="@dimen/size_icon_tab_item"
        android:layout_marginEnd="@dimen/margin_end_icon_tab_item"
        android:src="@drawable/icon_breath_tab" />

    <TextView
        android:id="@+id/tabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx_tab_item_setup"
        android:textSize="@dimen/size_history_tab_item"
        android:textColor="@color/black" />
</LinearLayout>