<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="kr.daejeonuinversity.lungexercise.view.history.HistoryActivity" />

        <variable
            name="viewmodel"
            type="kr.daejeonuinversity.lungexercise.viewmodel.HistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- 전체 스크롤 가능하게 만드는 NestedScrollView -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- NestedScrollView는 반드시 child가 하나여야 하므로 LinearLayout 사용 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AppBar -->
                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white"
                        app:contentInsetStart="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/size_icon_back"
                                android:layout_height="@dimen/size_icon_back"
                                android:layout_marginStart="@dimen/margin_start_icon_back"
                                android:onClick="@{() -> viewmodel.btnBack()}"
                                android:src="@drawable/icon_back"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/tx_breath_history"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_tx_app_bar_input_info"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>

                <!-- 월 표시 -->
                <LinearLayout
                    android:id="@+id/layoutMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnPrevMonth"
                        android:layout_width="@dimen/size_icon_left_right"
                        android:layout_height="@dimen/size_icon_left_right"
                        android:onClick="@{() -> viewmodel.prevMonth()}"
                        android:src="@drawable/icon_left" />

                    <TextView
                        android:id="@+id/tvCurrentMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:text="@string/tx_calendar_date_setup"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_tx_calendar_date"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnNextMonth"
                        android:layout_width="@dimen/size_icon_left_right"
                        android:layout_height="@dimen/size_icon_left_right"
                        android:onClick="@{() -> viewmodel.nextMonth()}"
                        android:src="@drawable/icon_right" />
                </LinearLayout>

                <!-- 요일 표시 + 달력 + 그래프 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <!-- 요일 텍스트 -->
                    <LinearLayout
                        android:id="@+id/layoutWeekDays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- 일 ~ 토 반복 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sun"
                            android:textColor="#E53935"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mon"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tue"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Wed"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Thu"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fri"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sat"
                            android:textColor="#1E88E5"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 달력 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendarRecyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutWeekDays"
                        tools:listitem="@layout/item_calendar_day" />

                    <!-- 막대 그래프 -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/calendarRecyclerView" />

                    <!-- 추가 공간용 (필요 시 내용 채우기) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_tx_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/barChart">

                        <LinearLayout
                            android:id="@+id/linear_tx_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.5">

                            <TextView
                                android:id="@+id/tx_total_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="14dp"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="@{viewmodel.txTotalCount}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/tx_history_data_textview" />

                            <TextView
                                android:id="@+id/tx_average_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="14dp"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="@{viewmodel.txAverageTime}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/tx_history_data_textview" />

                            <TextView
                                android:id="@+id/tx_total_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="14dp"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="@{viewmodel.txTotalTime}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/tx_history_data_textview" />

                            <TextView
                                android:id="@+id/tx_clear_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="14dp"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="@{viewmodel.txClearCount}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/tx_history_data_textview" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/btn_stop"
                            android:layout_width="@dimen/width_btn_timer"
                            android:layout_height="@dimen/height_btn_timer"
                            android:layout_weight="1"
                            android:background="@drawable/border_btn_stop_timer"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/linear_tx_data"
                            app:layout_constraintStart_toEndOf="@+id/linear_tx_data"
                            android:onClick="@{() -> viewmodel.btnRemove()}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="center"
                                android:text="@string/tx_remove_breath_data"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_tx_btn_next"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>