<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="kr.daejeonuinversity.lungexercise.view.editinfo.EditInfoActivity" />

        <variable
            name="viewmodel"
            type="kr.daejeonuinversity.lungexercise.viewmodel.EditInfoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:contentInsetStart="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_icon_back"
                        android:layout_height="@dimen/size_icon_back"
                        android:layout_marginStart="@dimen/margin_start_icon_back"
                        android:onClick="@{() -> viewmodel.btnBack()}"
                        android:src="@drawable/icon_back"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center"
                        android:text="@string/tx_edit_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_appbar_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_side_constraint_basic_info"
            android:layout_marginEnd="@dimen/margin_side_constraint_basic_info"
            android:background="@drawable/border_constraint_basic_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <TextView
                android:id="@+id/tx_basic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tx_basic_info"
                android:layout_marginTop="@dimen/margin_tx_basic_info"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/tx_basic_info"
                android:textColor="@color/black"
                android:textSize="@dimen/size_tx_basic_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_tx_birth"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/tx_birth"
                android:textColor="@color/tx_birth"
                android:textSize="@dimen/size_tx_birth"
                app:layout_constraintStart_toStartOf="@+id/tx_basic_info"
                app:layout_constraintTop_toBottomOf="@+id/tx_basic_info" />

            <LinearLayout
                android:id="@+id/linear_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_linear_birth"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_side_linear_birth"
                android:paddingEnd="@dimen/padding_side_linear_birth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tx_birth">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_linear_birth"
                    android:layout_weight="1"
                    android:background="@drawable/border_constraint_birth">

                    <EditText
                        android:id="@+id/edt_year"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="@{viewmodel.txYear}"
                        android:textColor="@color/color_edt_year"
                        android:textSize="@dimen/size_edt_year"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="@dimen/space_width_constraint_birth"
                    android:layout_height="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_linear_birth"
                    android:layout_weight="1"
                    android:background="@drawable/border_constraint_birth">

                    <EditText
                        android:id="@+id/edt_month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="@{viewmodel.txMonth}"
                        android:textColor="@color/color_edt_year"
                        android:textSize="@dimen/size_edt_year"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="@dimen/space_width_constraint_birth"
                    android:layout_height="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_linear_birth"
                    android:layout_weight="1"
                    android:background="@drawable/border_constraint_birth">

                    <EditText
                        android:id="@+id/edt_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="@{viewmodel.txDay}"
                        android:textColor="@color/color_edt_year"
                        android:textSize="@dimen/size_edt_year"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tx_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tx_basic_info"
                android:layout_marginTop="@dimen/margin_top_tx_gender_constraint"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/tx_gender"
                android:textColor="@color/tx_birth"
                android:textSize="@dimen/size_tx_birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_birth" />

            <LinearLayout
                android:id="@+id/linear_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_linear_birth"
                android:layout_marginBottom="@dimen/margin_bottom_linear_gender"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_side_linear_birth"
                android:paddingEnd="@dimen/padding_side_linear_birth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tx_gender">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_man"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_linear_gender"
                    android:layout_weight="1"
                    android:background="@drawable/border_constraint_gender"
                    android:onClick="@{() -> viewmodel.btnMan()}">

                    <TextView
                        android:id="@+id/btn_man"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="남성"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_edt_year"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="@dimen/space_width_constraint_gender"
                    android:layout_height="match_parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_woman"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_linear_gender"
                    android:layout_weight="1"
                    android:background="@drawable/border_constraint_gender_not"
                    android:onClick="@{() -> viewmodel.btnWoman()}">

                    <TextView
                        android:id="@+id/btn_woman"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="여성"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_edt_year"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_body_specs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_side_constraint_basic_info"
            android:layout_marginTop="@dimen/margin_top_constraint_basic_info"
            android:layout_marginEnd="@dimen/margin_side_constraint_basic_info"
            android:background="@drawable/border_constraint_basic_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_basic_info">

            <TextView
                android:id="@+id/tx_body_specs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tx_basic_info"
                android:layout_marginTop="@dimen/margin_tx_basic_info"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/tx_body_specs"
                android:textColor="@color/black"
                android:textSize="@dimen/size_tx_basic_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_tx_birth"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/tx_body_weight"
                android:textColor="@color/tx_birth"
                android:textSize="@dimen/size_tx_birth"
                app:layout_constraintStart_toStartOf="@+id/tx_body_specs"
                app:layout_constraintTop_toBottomOf="@+id/tx_body_specs" />

            <TextView
                android:id="@+id/tx_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_tx_birth"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/tx_height"
                android:textColor="@color/tx_birth"
                android:textSize="@dimen/size_tx_birth"
                app:layout_constraintStart_toStartOf="@+id/constraint_body_height"
                app:layout_constraintTop_toBottomOf="@+id/tx_body_specs" />

            <LinearLayout
                android:id="@+id/constraint_body_weight"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_linear_birth"
                android:layout_marginStart="@dimen/padding_side_linear_birth"
                android:layout_marginTop="@dimen/margin_top_linear_specs"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="@dimen/margin_bottom_constraint_body_weight"
                android:background="@drawable/color_border_constraint_body_specs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/constraint_body_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tx_weight">

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:inputType="number"
                    android:paddingStart="@dimen/padding_start_edt_kg"
                    android:text="@{viewmodel.txWeight}"
                    android:textColor="@color/color_edt_year"
                    android:textSize="@dimen/size_edt_year" />

                <TextView
                    android:id="@+id/tx_kg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_end_tx_kg_in_edit_info"
                    android:layout_weight="0.2"
                    android:text="@string/tx_kg"
                    android:textColor="@color/tx_kg_cm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/constraint_body_height"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_linear_birth"
                android:layout_marginStart="@dimen/margin_start_constraint_body_height"
                android:layout_marginTop="@dimen/margin_top_linear_specs"
                android:layout_marginEnd="@dimen/padding_side_linear_birth"
                android:layout_marginBottom="@dimen/margin_bottom_constraint_body_weight"
                android:background="@drawable/color_border_constraint_body_specs"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/constraint_body_weight"
                app:layout_constraintTop_toBottomOf="@id/tx_height">

                <EditText
                    android:id="@+id/edt_height"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:inputType="number"
                    android:paddingStart="@dimen/padding_start_edt_cm"
                    android:text="@{viewmodel.txHeight}"
                    android:textColor="@color/color_edt_year"
                    android:textSize="@dimen/size_edt_year" />

                <TextView
                    android:id="@+id/tx_cm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_end_tx_kg_in_edit_info"
                    android:layout_weight="0.2"
                    android:text="@string/tx_cm"
                    android:textColor="@color/tx_kg_cm" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_side_constraint_basic_info"
            android:layout_marginTop="@dimen/margin_top_constraint_basic_info"
            android:layout_marginEnd="@dimen/margin_side_constraint_basic_info"
            android:background="@drawable/border_constraint_edit_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_body_specs">

            <ImageView
                android:id="@+id/icon_edit_guide"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="@dimen/margin_tx_basic_info"
                android:layout_marginTop="@dimen/margin_tx_basic_info"
                android:src="@drawable/icon_edit_guide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_edit_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_tx_edit_guide"
                android:layout_marginTop="@dimen/margin_tx_basic_info"
                android:fontFamily="@font/pretendard_semibold"
                android:text="@string/tx_edit_guide"
                android:textColor="@color/color_tx_edit_guide"
                android:textSize="@dimen/size_tx_edit_guide"
                app:layout_constraintStart_toEndOf="@+id/icon_edit_guide"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tx_edit_guide_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_tx_edit_guide_detail"
                android:layout_marginEnd="@dimen/margin_end_tx_edit_guide_detail"
                android:layout_marginBottom="@dimen/margin_bottom_tx_edit_guide_detail"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/tx_edit_guide_detail"
                android:textColor="@color/color_tx_edit_guide_detail"
                android:textSize="@dimen/size_tx_edit_guide_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tx_edit_guide"
                app:layout_constraintTop_toBottomOf="@+id/icon_edit_guide" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linear_decision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_linear_birth"
            android:layout_marginBottom="@dimen/margin_bottom_linear_gender"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_side_linear_birth"
            android:paddingEnd="@dimen/padding_side_linear_birth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_guide">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height_linear_gender"
                android:layout_weight="1"
                android:background="@drawable/border_constraint_gender_not">

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{() -> viewmodel.btnBack()}"
                    android:text="취소"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_edt_year"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="@dimen/space_width_constraint_decision"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height_linear_gender"
                android:layout_weight="1"
                android:background="@drawable/border_constraint_gender">

                <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{() -> viewmodel.btnSave()}"
                    android:text="@string/tx_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_edt_year"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>